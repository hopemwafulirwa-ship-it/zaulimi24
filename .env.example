# Environment variables for Zaulimi24

# Server configuration
PORT=5000
NODE_ENV=development

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/zaulimi24

# JWT configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Redis configuration
REDIS_URL=redis://localhost:6379

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Cloud Storage (Firebase/Cloudinary)
CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_name

# Email service (for password reset, etc.)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Frontend URL (for redirects and CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info